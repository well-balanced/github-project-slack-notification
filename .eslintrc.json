{
  "root":true,
  "overrides":[
     {
        "files":[
           "*.ts"
        ],
        "rules":{
           "@typescript-eslint/member-delimiter-style":[
              "warn",
              {
                 "multiline":{
                    "delimiter":"semi",
                    "requireLast":true
                 },
                 "singleline":{
                    "delimiter":"semi",
                    "requireLast":false
                 }
              }
           ]
        }
     }
  ]
}